# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git - it contains sensitive information

# =============================================================================
# GOOGLE SERVICES
# =============================================================================

# Google Analytics Measurement ID
# Get this from: https://analytics.google.com/
# Format: G-XXXXXXXXXX
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Google AdSense Publisher ID
# Get this from: https://www.google.com/adsense/
# Format: ca-pub-xxxxxxxxxxxxxxxxx
VITE_ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxxxxxxxxxx

# =============================================================================
# ADSENSE AD SLOTS
# =============================================================================

# Header Banner Ad Slot ID
VITE_ADSENSE_HEADER_SLOT=1111111111

# Sidebar Ad Slot ID  
VITE_ADSENSE_SIDEBAR_SLOT=2222222222

# Footer Ad Slot ID
VITE_ADSENSE_FOOTER_SLOT=3333333333

# Mobile Banner Ad Slot ID
VITE_ADSENSE_MOBILE_SLOT=4444444444

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Name
VITE_APP_NAME="Age & Love Calculator"

# Website Domain (without protocol)
VITE_DOMAIN=your-domain.com

# API Base URL (if you add backend features later)
VITE_API_URL=https://api.your-domain.com

# Contact Email
VITE_CONTACT_EMAIL=contact@your-domain.com

# =============================================================================
# SOCIAL MEDIA
# =============================================================================

# Facebook App ID (for better sharing)
VITE_FACEBOOK_APP_ID=your_facebook_app_id

# Twitter Handle (without @)
VITE_TWITTER_HANDLE=your_twitter_handle

# =============================================================================
# FEATURES FLAGS
# =============================================================================

# Enable/disable AdSense (true/false)
VITE_ENABLE_ADSENSE=false

# Enable/disable Analytics (true/false)
VITE_ENABLE_ANALYTICS=false

# Enable/disable Social Sharing (true/false)
VITE_ENABLE_SOCIAL_SHARING=true

# Maximum image upload size in MB
VITE_MAX_IMAGE_SIZE=5